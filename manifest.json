{
    "manifest_version": 3,
    "name": "YTimer - New Tab",
    "version": "1.1.0",
    "description": "A beautiful countdown to the end of the year with customizable quick links, tab groups, and advanced sticky notes. Transform your new tab into a productivity dashboard.",
    "author": "Manish Kumar Barman",
    "homepage_url": "https://github.com/ManishKrBarman/ext-ytimer",
    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "tabs",
        "notifications",
        "alarms"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/js/content-script.js"
            ],
            "css": [
                "src/css/sticky-note.css"
            ],
            "run_at": "document_end"
        }
    ],
    "chrome_url_overrides": {
        "newtab": "src/html/newtab.html"
    },
    "background": {
        "service_worker": "src/js/background.js"
    },
    "icons": {
        "16": "assets/icons/icon-16.png",
        "32": "assets/icons/icon-32.png",
        "48": "assets/icons/icon-48.png",
        "128": "assets/icons/icon-128.png"
    },
    "action": {
        "default_icon": {
            "16": "assets/icons/icon-16.png",
            "32": "assets/icons/icon-32.png",
            "48": "assets/icons/icon-48.png",
            "128": "assets/icons/icon-128.png"
        },
        "default_title": "YTimer - New Tab"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "icons/icon.svg"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}